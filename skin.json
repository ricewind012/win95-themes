{
	"author": "ricewind",
	"name": "Windows 95",
	"description": "A Windows 95 look",
	"version": "2.1.0",
	"header_image": "https://raw.githubusercontent.com/ricewind012/win95-themes/master/assets/preview/steam/main-window.png",
	"splash_image": "https://raw.githubusercontent.com/ricewind012/win95-themes/master/assets/preview/steam/main-window.png",
	"github": {
		"owner": "ricewind012",
		"repo_name": "win95-themes"
	},
	"Patches": [
		{
			"MatchRegexString": ".DesktopUI",
			"TargetCss": "steam_import.css",
			"TargetJs": "src/steam/steam.js"
		},
		{
			"MatchRegexString": ".fullheight",
			"TargetCss": "steam_import.css",
			"TargetJs": "src/steam/steam.js"
		},
		{
			"MatchRegexString": ".friendsui-container",
			"TargetCss": "steam_import.css",
			"TargetJs": "src/steam/steam.js"
		}
	],
	"Conditions": {
		"Colors": {
			"description": "[b]Only default[/b] will respect system's light/dark/high contrast theme preference.",
			"default": "Default",
			"values": {
				"Default": {},
				"Hotdog Stand": {
					"TargetCss": {
						"affects": [".*"],
						"src": "src/shared/colors/hotdogstand.css"
					}
				},
				"VGUI": {
					"TargetCss": {
						"affects": [".*"],
						"src": "src/shared/colors/vgui.css"
					}
				},
				"Windows 2000": {
					"TargetCss": {
						"affects": [".*"],
						"src": "src/shared/colors/win2000.css"
					}
				}
			}
		},
		"Reduced game list entry height": {
			"default": "no",
			"description": "Makes the game list entries' height smaller. \n Only use this if you patched Steam! Run [c]./scripts/patch steam[/c] in the repo's directory to apply the patches (Linux only).",
			"values": {
				"yes": {
					"TargetCss": {
						"affects": [".*"],
						"src": "src/steam/options/reduceditemheight.css"
					}
				}
			}
		}
	}
}
