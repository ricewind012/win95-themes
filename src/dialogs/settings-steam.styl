[class*="pagedsettings_PagedSettingsDialog_"] {
	.ModalPosition_Content > & {
		margin: 8px;
		flex-direction: column;
	}

	/{attr(PageList)} {
		line-height: var(--font-line);
		padding-left: 2px;
		padding-top: 2px;
		flex-direction: row;
		overflow-y: hidden;
	}
	/{attr(PageListColumn)} {
		background-color: transparent;
		padding: 0;
		max-width: unset;
		flex-grow: 0;
	}

	/{attr(PageListItem)} {
		--color-tab-border: var(--color-button-highlight);
		background-color: var(--color-button-face) $i;
		color: var(--color-button-text) $i;
		font-size: var(--font-size);
		font-weight: normal;
		text-decoration: none $i;
		border: 1px solid;
		border-bottom: none;
		border-color: var(--button-3d-border-color);
		border-radius: 2px 2px 0 0;
		box-shadow:
			1px 0 var(--color-button-shadow-dark),
			1px 1px var(--color-tab-border);
		// TODO: the text moves left/right for some reason
		margin: 0 1px -1px 0 $i;
		padding: 2px 6px;
		align-items: unset;
		cursor: default;

		&[class*="Active"] {
			--color-tab-border: var(--color-button-face);
			margin: -2px 0 0 -2px $i;
			padding: 3px 6px;
			z-index: 1;
		}
	}
}
[class*="pagedsettings_"] {
	/{attr(PagedSettingsDialog_Title)},
	/{attr(PageListSeparator)},
	/{attr(PageListItem_Icon)} {
		display: none;
	}
}

[class*="friendssettings_"] {
	/{attr(FakeFriend)} {
		margin: 0;
	}
}
[class*="desktopsecuritysettings_"],
[class*="accountsettings_"] {
	/{attr(EntryLabel)} {
		padding: 0;
	}
	/{attr(EntryValue)} {
		font: var(--font);
		color: var(--color-button-text);

		&::before {
			content: ': ';
		}
	}
}
[class*="desktopsecuritysettings_"] {
	/{attr(SteamGuardIcon)} {
		color: red;

		&[class*="Enabled"] {
			color: green;
		}
	}
}
[class*="voicesettings_"] {
	/{attr(MicrophoneTest)} {
		gap: 4px;
		flex-direction: row-reverse;
	}
}
[class*="remoteplaysettings_TableHeader_"],
[class*="notificationssettings_ToggleHeader_"] {
	color: var(--color-button-text) $i;
	font: var(--font) $i;
	letter-spacing: unset $i;
	text-transform: unset $i;
}
[class*="notificationssettings_"] {
	/{attr(NotificationGroup)} {
		background-color: transparent;
		border-bottom: none;
		margin: 0;
	}
	/{attr(NotificationSection)} {
		align-items: center;
	}

	/{attr(NotificationFeedToggle)} {
		margin-right: 4px $i;
	}
	/{attr(NotificationDescription)} {
		font: var(--font);
		color: inherit;
		margin: 0;
	}
	/{attr(NotificationPrefDetails)} {
		background-color: transparent;
		padding: 0;
		padding-left: 23px;
		box-shadow: none;
		flex-direction: column;

		.DialogCheckbox_Container {
			margin: 0;
		}
	}
	/{attr(PrefDetailsToggle)} svg {
		margin: 0;
		height: var(--font-size);
	}

	/{attr(Toggles)}:not(.Focusable) {
		gap: 42px;
	}
}
