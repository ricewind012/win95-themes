$max-nest = 10;

/**
 * Attributes
 *
 * aria-expanded | directory, if present
 * aria-level    | how deep it is
**/

[aria-level]:not([aria-level="1"]) {
	--a: 36px;
	--b: 12px;
	--b-with-arrow: 24px;

	&:not([aria-expanded]) {
		--b: var(--b-with-arrow);
	}

	&::before {
		display: none;
	}

	.monaco-tl-twistie {
		padding-left: 0;
		margin-left: calc(var(--offset) + var(--a) + var(--b) * (var(--level) - var(--multiply)));
	}
}

for i in range(2, $max-nest) {
	{s('[aria-level="%s"]', i)} {
		--level: i;
		--multiply: 4 - (0.5 * i);
		--offset: 2px * (i - 6);

		&:not([aria-expanded]) {
			--offset: -14px * (i - 3);
		}
	}
}

// God knows why these need an override ...
.part.sidebar div[aria-level="1"] {
	&:not([aria-expanded]) {
		margin-left: 4px;

		&::before {
			top: -6px;
			left: 4px;
			display: initial;
		}
	}

	&::before {
		top: -6px;
		left: 8px;
	}

	.monaco-tl-contents::before,
	.monaco-tl-twistie::after {
		display: none;
	}
}

[aria-level="2"] {
	--offset: 0px;

	&:not([aria-expanded]) {
		--multiply: 2;
		--offset: 2px;
	}
}

[aria-level="3"] {
	--offset: 0px;

	&:not([aria-expanded]) {
		--offset: 7px;
	}
}

[aria-level="4"] {
	--offset: 0px;

	&:not([aria-expanded]) {
		--offset: -10px;
	}
}

.part.sidebar [role="treeitem"] {
	@extend .tree-item;

	// Revert for @extend
	margin: 0;

	position: absolute;

	&[aria-expanded="true"] {
		@extend .tree-item[open];
	}

	&[aria-selected="true"] {
		background-color: var(--color-window);
		color: var(--color-window-text);

		.monaco-icon-name-container {
			@extend .list-item[selected] > .list-item-name-container > .list-item-name;
		}
	}

	.monaco-icon {
		&-label {
			gap: 2px;

			align-items: center;

			&::before {
				// Fix for source control tab or the extension
				position: relative;
				height: var(--icon-size);
				z-index: 99;

				padding-right: 2px;
			}

			&::after {
				width: 12px;

				opacity: 1;
				font-size: inherit;
				margin: 0;
			}

			&-container {
				margin-top: 1px;
			}
		}

		&-name-container {
			@extend .list-item-name;

			.label-separator {
				opacity: 1;
				margin: 0;
			}
		}
	}
}

// Tree dots
.monaco-tl {
	&-row {
		margin-left: -7px;

		overflow: visible;
	}

	&-indent {
		left: 11px;
	}

	&-contents {
		overflow: visible;
		position: relative;

		// Expand button to icon dots
		&::before,
		[aria-expanded] &::after {
			content: '';

			position: absolute;
		}

		&::before {
			left: -6px;
			top: 50%;
			width: 7px;

			border-bottom: 1px dotted var(--color-gray-text);
		}
	}

	&-twistie {
		@extend .tree-item-icon;

		margin-right: var(--spacing-tree);

		flex-shrink: 0;
		z-index: 2;

		&::before {
			transform: unset;
		}

		&::after {
			left: 1px;
			width: 11px;
		}
	}

	&-indent {
		top: -18px;
		height: calc(100% + 22px);

		& > .indent-guide {
			border-left: 1px dotted var(--color-gray-text);

			width: calc(11px + var(--spacing-tree));
			height: calc(100% - 1px);
		}
	}
}

