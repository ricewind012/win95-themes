[role="tab"] {
	margin: 2px 1px -2px 0;

	.action-label {
		font-size: var(--text-size);
		font-family: var(--text-font-ui), codicon;
		color: inherit;

		padding: 0;
	}

	.monaco-icon-label {
		&::before,
		&-container::after {
			display: none;
		}
	}
}

// Editor
.tab {
	min-width: unset;

	cursor: unset;

	&:not([aria-selected="true"]) {
		margin-bottom: -1px;

		// !important
		.monaco-workbench .part.editor > .content .editor-group-container[class] > .title &:hover {
			background-color: var(--color-button-face);
		}
	}

	&s {
		--editor-group-tab-height: inherit;

		background-color: var(--color-button-face);

		cursor: unset;

		&,
		&-container,
		&-and-actions-container,
		.monaco-scrollable-element {
			overflow: visible;
		}

		&-container {
			padding-left: 4px;
		}

		&-border-bottom::after {
			display: none;
		}
	}

	&-border {
		&-top,
		&-bottom {
			&-container {
				display: none;
			}
		}
	}

	&-label {
		padding: 0;

		a {
			font();
		}

		a,
		span {
			cursor: unset;
		}
	}

	&-actions {
		margin-left: 4px;

		&,
		.monaco-action-bar,
		.action-label {
			box(auto);
		}

		/*
		 * No borders, since it interferes with
		 * editor tab height and unsaved file icon.
		 */
		.action-label {
			box-shadow: none;
		}
	}
}

// Top activity bar
.sidebar .title.has-composite-bar {
	overflow: visible;

	padding: 0;
	padding-left: 4px;
	margin-bottom: 2px;

	.monaco-action-bar {
		line-height: unset;
		height: unset;

		.action {
			&-item {
				height: unset;

				&::before,
				&::after {
					opacity: 1;

					margin: 0;

					display: block;
				}
			}
		}
	}

	& + .content {
		--tabs-compensation: 7px;

		& > .composite {
			@extend [role="tabpanel"];

			.pane-header {
				margin-bottom: 3px;
			}

			.actions {
				padding: 1px 0;

				display: block;
			}

			&:not(.extensions-viewlet) .monaco-list {
				height: calc(100% - 20px);
			}
		}
	}
}

// Panel
.part.panel {
	.monaco-action-bar {
		font();

		padding-top: 2px;
		margin-bottom: 1px;

		// KILL YOURSELF
		position: relative;
		bottom: 3px;
		height: 100%;

		.action-item:not(.select-container) {
			font();
			text-transform: unset;

			cursor: unset;

			&[aria-selected="true"] {
				margin-bottom: -3px;
			}

			&::before,
			&::after {
				opacity: 1;
				background-color: transparent;

				margin: 0;

				display: block;
			}
		}
	}

	.tabs-container {
		padding: 0;
		border: none;

		.monaco-list {
			width: calc(100% - 64px);
			height: calc(100% - 2px);
		}

		.actions {
			display: block;
		}
	}
}

// Settings
.settings-tabs-widget {
	margin-left: 4px;

	// !important
	& > .monaco-action-bar .action {
		&-item {
			overflow: visible;
		}

		&-label {
			@extend [role="tab"];

			opacity: 1;
			overflow: visible;
			font-size: var(--text-size);

			&.checked {
				// Has [role="checkbox"] for some reason.
				@extend [role="tab"][aria-selected="true"];

				background-color: var(--color-button-face);
			}
		}
	}
}

// Marketplace
.navbar {
	font();
	border: none;

	padding: 0;
	padding-left: 4px;

	height: unset;
}

.action {
	// !important
	.extension-editor > .body > .navbar > .monaco-action-bar > &s-container > &-item > &-label {
		@extend [role="tab"];

		font();
		text-transform: unset;

		&[aria-checked="true"] {
			// Has [role="checkbox"] for some reason.
			@extend [role="tab"][aria-selected="true"];
		}
	}
}
