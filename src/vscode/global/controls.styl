.select-container {
	overflow: visible;

	&::after {
		display: none;
	}
}

.monaco {
	// Buttons
	&-button {
		@extend button;

		&-description {
			font();
		}
	}

	&-text-button {
		height: unset;
	}

	&-text-button-with-short-label,
	&-description-buttons > &-button {
		overflow: visible;
		width: 148px;
	}

	&-toolbar,
	.peekview-widget &-action-bar,
	.dialog-toolbar-row &-action-bar,
	.notifications-center &-action-bar,
	.notification-toast &-action-bar,
	.settings-clear-widget &-action-bar,
	.terminal-tabs-entry &-action-bar {
		.action-label {
			@extend button;
			@extend .titlebar-button;

			&[aria-disabled] {
				@extend button:disabled;
			}

			&[aria-expanded="true"] {
				@extend button:active;
			}
		}

		.action-item {
			// Titlebar
			&.clicked > .action-label {
				@extend button:active;
			}
		}
	}

	&-action-bar {
		.action-item {
			cursor: unset;

			&:not([role="tab"]) {
				margin: 0;
			}
		}
	}

	&-dropdown {
		& > .dropdown-label {
			cursor: unset;
		}

		&-button {
			@extend button;
			@extend .titlebar-button;

			width: 16px;
			height: 23px;
		}
	}

	// Text input
	&-inputbox {
		background-color: transparent;
		color: var(--color-window-text);
		font();
		border: none;

		overflow: visible;
		height: unset;

		.action-label {
			padding: 0;

			display: flex;
			justify-content: center;
		}
	}

	&-findInput {
		gap: var(--toolbar-spacing);

		display: flex;
		align-items: center;

		& > .monaco-scrollable-element {
			overflow: visible;
			flex: 1;
		}

		input,
		textarea {
			width: 100%;
		}

		.controls {
			position: unset;
		}
	}

	// Checkboxes
	&-checkbox {
		@extend input;
		@extend input[type="checkbox"];

		border: none;
		margin: 0;

		&.checked {
			@extend input[type="checkbox"]:checked;
		}
	}

	&-custom-toggle:not(&-checkbox) {
		&.codicon,
		.codicon {
			@extend button;
			@extend .titlebar-button;

			border: none;

			width: unset;

			&.checked {
				@extend button:active;
			}
		}
	}

	// Badges
	&-count-badge {
		background-color: transparent;
		color: inherit;
		font();
		parentheses();
		padding: 0;

		min-width: unset;
		min-height: unset;
	}

	/.badge {
		margin-left: var(--text-spacing);

		position: unset;
		width: unset;
		height: unset;
		z-index: initial;

		&-content {
			background-color: transparent;
			color: inherit;
			font();
			parentheses();
			padding: 0;

			position: unset;
			height: unset;
		}
	}

	// Separator
	&-sash {
		--vscode-sash-size: 7px;
		--vscode-sash-hover-size: 7px;
		--vscode-sash-hoverBorder: transparent;

		&.vertical {
			margin-left: 2px;

			#workbench\.parts\.editor & {
				--vscode-sash-size: 19px;
				margin-left: -11px;
			}
		}

		&.horizontal {
			margin-top: -12px;
		}
	}

	// Scrollbar
	&-scrollable-element > .scrollbar {
		@extend ::-webkit-scrollbar;

		top: 0px;
		height: 100%;

		&.horizontal {
			width: 100%;
			height: var(--scrollbar-size);
		}

		& > .slider {
			@extend ::-webkit-scrollbar-thumb;

			width: var(--scrollbar-size);
		}

		& > .scra.codicon {
			@extend ::-webkit-scrollbar-button;

			font-size: 0;

			left: 0;

			&:active {
				@extend ::-webkit-scrollbar-button:active;
			}

			&-scrollbar-button {
				&-up {
					@extend ::-webkit-scrollbar-button:vertical:decrement;

					top: 0;
				}

				&-down {
					@extend ::-webkit-scrollbar-button:vertical:increment;

					bottom: 0;
				}

				&-left {
					@extend ::-webkit-scrollbar-button:horizontal:decrement;

					left: 0;
				}

				&-right {
					@extend ::-webkit-scrollbar-button:horizontal:increment;

					left: unset;
					right: 0;
				}
			}
		}
	}

	/.decorationsOverviewRuler {
		top: var(--scrollbar-size);
		width: var(--scrollbar-size);
		height: calc(100% - var(--scrollbar-size) * 2);
		z-index: 12;

		pointer-events: none;
	}

	// Item list
	&-list {
		@extend .content-container;

		width: 100%;
		height: calc(100% - 10px);

		&:focus::before {
			display: none;
		}

		&-row {
			overflow: visible;
			font();

			&.selected {
				--vscode-keybindingLabel-border: var(--color-active-caption-text);
				--vscode-keybindingLabel-bottomBorder: var(--vscode-keybindingLabel-border);
				--vscode-widget-shadow: @css {
					color-mix(in srgb, var(--color-active-caption-text) 50%, transparent)
				};
			}

			& > .option-detail {
				opacity: 1;
			}
		}
	}
}

.action {
	&-item.disabled &-label {
		.monaco-action-bar & {
			@extend .titlebar-button:disabled;
		}

		&,
		&::before {
			opacity: 1;
		}
	}
}

.scm-editor,
.suggest-input {
	&-container {
		@extend input;
		@extend input[type="text"];

		border: none;

		flex-grow: 1;

		.monaco-editor {
			&[style*="height: 20px"],
			&[style*="height: 21px"],
			&[style*="height: 22px"],
			&[style*="height: 23px"],
			&[style*="height: 24px"] {
				height: calc(var(--text-size) * var(--text-line) + 8px);
			}
		}

		.view-lines {
			font();
		}
	}

	&-placeholder {
		font();
		padding: 0;
		margin: 0;

		width: unset;
	}
}

// !important
.monaco-workbench .part.editor > .content .gettingStartedContainer .gettingStartedSlide .getting-started-checkbox,
.settings-editor > .settings-body .settings-tree-container .setting-item-bool .setting-value-checkbox {
	@extend input;
	@extend input[type="checkbox"];

	min-width: unset;

	&.checked {
		@extend input[type="checkbox"]:checked;
	}
}
