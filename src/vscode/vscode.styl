codicon() {
	font-family: codicon;
	font-size: 11px;
}

replace-icon(w, h = w) {
	&::before {
		content: '';

		-webkit-mask: var(--icon-img) no-repeat;
		-webkit-mask-size: w h;
		-webkit-mask-position: var(--icon-img-pos, center);
		background-color: var(--color-button-text);

		width: w;
		height: h;

		display: block;
	}
}