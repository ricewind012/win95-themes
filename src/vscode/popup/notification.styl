.notification {
	&-toast {
		opacity: 1;
		background-color: transparent;
		border: none;
		box-shadow: none;

		transform: none;

		.monaco {
			&-list {
				@extend [role="tabpanel"];

				&-row {
					background-color: transparent;
				}
			}
		}
	}

	&-list-item {
		padding: 5px;

		&-details-row,
		&-buttons-container {
			overflow: visible;
		}

		&-icon {
			font-size: 0;
			margin-left: 0;
			margin-right: 16px;

			box(32px);
			flex: unset;
		}

		&-message,
		&-source {
			font();
		}

		&-buttons-container > .monaco-button {
			width: 148px;
		}
	}
}

.notifications-center {
	@extend .window;
	@extend .window.child;

	box(auto);

	&-header {
		background-color: transparent;
		padding: 10px;

		height: unset;

		&-title {
			font();
			text-transform: unset;
		}
	}
}