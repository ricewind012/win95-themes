[role="menu"] {
	@extend .window;
	@extend .window.child;
}

.context-view {
	animation: none;
	box-shadow: none;
}

[role="menu"] [role="menuitem"],
[role="menuitemcheckbox"] {
	@extend .menu-item;

	margin: 0;

	height: unset;

	&:hover {
		@extend .menu-item:hover;
	}
}

[aria-checked="true"] {
	&[role="menuitemcheckbox"] {
		@extend .menu-item[checked][type="checkbox"];
	}

	// Not present in 1.85, but just in case
	&[role="menuitemradio"] {
		@extend .menu-item[checked][type="radio"];
	}
}

.monaco {
	&-menu {
		font();

		.action-label,
		.keybinding {
			line-height: inherit;
			padding: 0;
		}

		.action-label {
			padding-left: 0;
		}

		.keybinding {
			padding-right: 0;
		}
	}

	&-action-bar {
		padding: 0;
	}

	// !important
	&-menu &-action-bar.vertical .action-label.separator {
		@extend hr;

		border-bottom: none;
	}

	&-submenu-item {
		@extend .menu-item[type="parent"];
	}
}

.submenu-indicator,
.menu-item-check {
	display: none;
}
