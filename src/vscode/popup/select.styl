.monaco {
	&-select-box-dropdown-container {
		@extend [role="listbox"];

		font: var(--text-ui);

		width: 320px;

		// The actual listbox
		.monaco-list {
			border: none;
			box-shadow: none;
			padding: 0;
		}

		& > .select-box {
			&-dropdown-list-container,
			&-details-pane {
				padding: 0;
			}

			&-details-pane {
				@extend hr;

				margin-inline: 3px 4px;
			}
		}
	}
}
