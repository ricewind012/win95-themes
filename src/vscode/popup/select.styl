.monaco {
	&-select-box-dropdown-container {
		@extend .window;
		@extend .window.child;

		width: 320px;

		.monaco-list {
			height: calc(100% - 8px);
		}

		& > .select-box {
			&-dropdown-list-container,
			&-details-pane {
				padding: 0;
			}

			&-details-pane {
				@extend hr;
			}
		}
	}
}
