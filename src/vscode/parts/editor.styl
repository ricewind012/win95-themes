.editor {
	&-container {
		background-color: transparent;

		height: calc(100% - 30px);
	}

	&-container > &-instance {
		@extend [role="tabpanel"];
		@extend [role="tabpanel"][compact];
	}

	&-group {
		&-container {
			background-color: var(--color-button-face);
			padding: 9px 12px 5px 7px;
		}

		&-watermark {
			.shortcuts {
				dl,
				dt {
					opacity: 1;
					color: inherit;
				}

				dt {
					font: var(--text-ui);
					letter-spacing: 0;
				}
			}
		}
	}

	&-actions {
		padding: 0;
	}

	& &-scrollable {
		width: calc(100% - 56px);

		.search-results {
			width: calc(100% - 38px);
		}
	}

	&-placeholder-label-container {
		font: var(--text-ui);
	}

	& > .content {
		background-color: transparent;
	}

	&,
	.split-view-container,
	.monaco-scrollable-element,
	.monaco-grid-view,
	.content {
		overflow: visible;
	}
}

.split-view-view {
	&:has(> .editor-group-container) {
		height: 100%;
	}

	&:not(:only-child) {
		// Split up/down
		&[style^="top:"][style*="height:"] > .editor-group-container > .editor-container {
			height: calc(50% - 35px);
		}

		// Split left/right
		&:first-child > .editor-group-container {
			width: 100%;

			& > .editor-container {
				height: calc(100% - 31px);
			}
		}
	}
}

.monaco {
	&-scrollable-element,
	&-split-view2.vertical.separator-border > &-scrollable-element > .split-view-container > .split-view-view {
		height: 100%;
	}

	&-editor {
		// The actual editor, i.e. not widgets
		.editor-instance > & {
			@extend .content-container;

			width: 100%;
			height: 100%;
		}

		// Widgets
		&:not([role="code"]) {
			@extend .window;
			@extend .window.child;
		}

		& > .overflow-guard {
			width: 100%;
			height: 100%;
		}

		.lines-content,
		.view-lines {
			width: calc(100% - var(--scrollbar-size));
		}

		.view-overlays {
			width: 100%;
		}

		.editor & .current-line {
			border: 1px solid var(--color-highlight);

			width: 100%;

			&-margin-both {
				border-right: none;
			}

			&-both {
				border-left: none;
			}
		}
	}
}
