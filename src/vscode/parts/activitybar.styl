.activitybar {
	@extend .content-container;

	margin-top: 3px;

	width: 46px;
	height: calc(100% - 10px);

	&.right {
		width: 40px;
	}

	& > .content {
		font();

		margin: 2px;

		width: 42px;
		height: 100%;
	}

	.action {
		&-item {
			background-color: transparent;
			border: none;
			box-shadow: none;

			padding: 0;
			margin: 0;

			cursor: pointer;

			&.checked .action-label {
				background-color: var(--color-highlight);
				color: var(--color-highlight-text);
			}

			.badge-content {
				position: absolute;
				top: 0;
				right: 4px;
				z-index: 1;
			}

			&.checked .badge-content {
				color: var(--color-highlight-text);
			}
		}

		&-label {
			background: no-repeat center;
			color: var(--color-window-text);
			font-size: 0;
			border-radius: 0;

			width: 100%;
		}
	}

	.active-item-indicator {
		display: none;
	}
}
