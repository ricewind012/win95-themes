.statusbar {
	background-color: var(--color-button-face);
	color: var(--color-button-text);

	height: unset;

	&-item {
		max-width: unset;

		// TODO: is this safe ?
		&[aria-label=""] {
			display: none;
		}

		&.right.last-visible-item {
			margin-right: 8px;
		}

		&-label {
			font: var(--text-ui);
			padding: 0;
			margin: 0;
		}
	}

	& > .left-items,
	& > .right-items {
		gap: 2px;
	}
}
