.extension {
	&-editor {
		padding: 12px;

		max-width: unset;

		& > .header {
			font();

			padding: 0;

			.action {
				&s-container {
					gap: 6px;

					& > .disabled {
						display: none;
					}
				}

				&-item {
					overflow: visible;
				}

				&-label.codicon:empty {
					@extend $small-button;

					height: 23px;
				}

				&-dropdown-item-separator {
					display: none;
				}
			}

			.status {
				font();
			}

			.details {
				overflow: visible;
			}
		}

		.subtitle {
			font();

			height: unset;

			&-entry:not(:first-child) {
				border-left: 1px solid var(--color-button-highlight);
				box-shadow: -1px 0 var(--color-button-shadow);

				padding-left: 10px;
				margin-left: 10px;
			}
		}

		.content {
			@extend [role="tabpanel"];

			margin-top: 1px;

			height: calc(100% - 43px);
		}

		.readme-container {
			max-width: unset;
		}
	}

	&-action {
		@extend button;

		margin: 0;
	}
}

.switch-to-prerelease {
	width: 167px;

	// why are there 2 different versions ?
	&.icon::before {
		content: attr(aria-label);
	}
}

// Details right sidebar
.additional-details {
	&-container {
		width: 36%;

		.category {
			font();
			border-radius: 0;
		}
	}

	&-content {
		padding: 14px;
	}

	&-element {
		@extend fieldset;
	}

	&-title {
		@extend legend;
	}
}

.more-info-entry {
	font();
}
