[class*="steamdesktop_"] {
	/{attr(Wrapper)} {
		background-color: transparent;
		border: none;
	}

	/{attr(FocusBar)},
	/{attr(URLBarReplacement)} {
		display: none $i;
	}
	/{attr(TopBar)} {
		background: transparent;
		box-shadow: none;
	}
	/{attr(TitleBar)} {
		flex-direction: column-reverse;
		height: unset;
		-webkit-app-region: no-drag;

		&::before {
			content: '';
			width: 100%;
			@extend hr;
		}
	}
	/{attr(WindowControls)},
	/{attr(RootMenuBar)} {
		flex: initial $i;
		cursor: default $i;
	}

	/{attr(RootMenuBar)} {
		gap: 0;
		padding: 0 $i;
	}

	/{attr(SuperNavBar)} {
		-webkit-app-region: no-drag;
	}
}

[class*="titlebarcontrols_"] {
	/{attr(GamepadUIToggle)} > svg {
		position: unset $i;
	}
}

[class*="rootmenu_"] {
	/{attr(RootMenuButton)} {
		color: var(--color-button-text) $i;
		font: var(--font);
		padding: 3px 6px 2px 6px;

		&:active,
		&[class*="Open"] {
			background-color: var(--color-active-caption);
			color: var(--color-active-caption-text) $i;
		}

		svg {
			display: none;
		}
	}
	/{attr(SteamButton)} {
		padding: 0;
	}
}

[class*="supernav_"] {
	/{attr(SuperNavMenu)} {attr(MenuButton)} {
		color: var(--color-button-text);
	}
}

[class*="bottombar_"] {
	/{attr(BottomBar)} {
		background: transparent;
		box-shadow: none;
		padding: 8px;
		flex: unset;
	}

	/{attr(AddGameButton)},
	/{attr(DownloadStatusContent)},
	/{attr(FriendsButton)} {
		@extend button;
		padding: 3px 6px $i;
		width: unset $i;
	}
	/{attr(Icon)},
	/{attr(Text)},
	/{attr(Queue)} {
		color: var(--color-button-text) $i;
	}
}
