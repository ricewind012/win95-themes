[class*="libraryhome_"] {
	/{attr(Container)} {
		background: transparent;
	}

	/{attr(UpdatesContainer)},
	/{attr(LibraryHome)} {
		background: none;
		color: var(--color-window-text);

		height: unset;
	}
}

[class*="libraryhomenewupdates_"] {
	/{attr(SettingsButton)} {
		@extend $small-button;

		--button-img: url('data:image/svg+xml;base64,');
		--button-img-size: 11px;
		--button-img-pos: 2px;

		&::before {
			height: 13px;
		}

		svg {
			display: none;
		}
	}

	/{attr(EventRowCarousel)} {
		margin: 0;
	}

	/{attr(EventTime)} {
		font: var(--text-ui);
		color: inherit;

		padding-top: 4px;
	}

	/{attr(EventOptions)} {
		opacity: 1;

		padding-top: 4px;
		padding-right: 4px;

		& > div {
			@extend $small-button;

			--button-img: var(--icon-arrow-bottom);
			--button-img-size: 7px 4px;
			--button-img-pos: 4px center;

			background-image: none;
		}
	}

	/{attr(PartnerEventRowCapsule)} {
		/{attr(TextTitle)} {
			font: var(--text-ui);
			color: var(--color-window-text);
		}
	}

	/{attr(GameIconAndName)} {
		@extend button;

		width: unset;
		align-items: center;
		justify-content: center;
	}

	/{attr(GameIcon)} {
		filter: none;

		margin-right: 4px;

		box(16px);
	}

	/{attr(GameName)} {
		color: inherit;
	}
}

[class*="boxcarousel_"] {
	/{attr(MaskRight)} {
		--negative-margin: 12px;
	}
}

[class*="pageablecontainer_"],
[class*="libraryhomeshowcases_"] {
	&[class*="PageLeft"],
	&[class*="PageRight"] {
		@extend $small-button;

		--button-img-size: 4px 7px;
		--button-img-pos: center;

		opacity: 1;

		&[class*="Disabled"] {
			@extend $small-button-disabled;
		}

		svg {
			display: none;
		}
	}

	&[class*="PageLeft"] {
		--button-img: var(--icon-arrow-left);
	}

	&[class*="PageRight"] {
		--button-img: var(--icon-arrow-right);
	}
}

[class*="pageablecontainer_"] {
	/{attr(PageableContainer)} {
		@extend fieldset;

		svg {
			color: inherit;
		}

		polyline {
			stroke: var(--color-window-text);
		}
	}

	/{attr(HeaderPageControls)} {
		font: var(--text-ui);
		color: inherit;
	}

	/{attr(Name)} {
		@extend $legend-as-div;

		background-color: var(--color-window);

		letter-spacing: 0;
	}
}

[class*="libraryhomeshowcases_"] {
	/{attr(AddShowcase)} {
		@extend button;

		text-transform: unset;
		justify-content: center;

		svg {
			display: none;
		}
	}

	/{attr(Collapser)} {
		@extend button;

		padding: 4px;

		box(20px);

		svg {
			margin: 0;
		}

		polyline {
			stroke: var(--color-button-text);
		}
	}

	/{attr(Showcase)} {
		@extend fieldset;

		margin-bottom: 16px;
	}

	/{attr(ShowcaseHeader)} {
		@extend $legend-as-div;

		background-color: var(--color-window);
		color: inherit;
		border: none;

		top: -12px;
		align-items: center;
	}

	/{attr(CountDisplay)} {
		color: inherit;
	}

	/{attr(PageButtons)} {
		margin: 0;
	}

	/{attr(ChildrenContainer)} {
		// PageableContainer
		& > div {
			border: none;
			box-shadow: none;

			padding: 0;
			margin: 0;
		}
	}
}

[class*="libraryhomerecentgames_"] {
	/{attr(RecentGames)} {
		height: unset;
	}

	/{attr(AddedDate)} {
		font: var(--text-ui);
		letter-spacing: 0;
		color: inherit;
	}

	/{attr(EmptyDate)} {
		height: calc(var(--text-size) * var(--text-line));
	}
}

[class*="appgrid_"] {
	/{attr(SortingDropDownLabel)} {
		font: var(--text-ui);
		color: inherit;
		text-transform: unset;
		letter-spacing: 0;

		margin: 0;

		&::after {
			content: ': ';
		}
	}
}

[class*="appportrait_"] {
	/{attr(LibraryItemBox)} {
		border: none;
		box-shadow: 0 0 1px var(--color-button-shadow);
	}
}