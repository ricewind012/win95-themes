#BottomControlsRow {
	padding-top: 6px;

	height: unset;

	.DialogTwoColLayout {
		gap: 0;

		& > .DialogButton {
			min-width: unset;
		}
	}

	.DialogFooter {
		padding: 0;
	}
}

#ColumnResizer {
	--separator-size: 13px;

	opacity: 0;
	padding: 0;

	width: var(--separator-size);
	margin-right: calc(var(--separator-size) / -2);
}

#DialogBody {
	box-shadow: none;
	padding: 0;
	gap: 0;

	.DialogButton svg {
		color: inherit;
	}
}

#DropdownLabel {
	font: var(--text-ui);
	margin-bottom: 4px;

	display: block;
}

#FilterOptionsCheckboxesCtr {
	align-self: center;
}

#FilterOptionsCtr {
	padding: 0;
	padding-top: 6px;

	&:not(#Collapsed) {
		gap: 6px;

		height: unset;
	}

	&#Collapsed {
		display: none;
	}

	.DialogInput {
		width: 100%;
	}

	.DialogDropDown,
	.DialogInput {
		margin-bottom: 6px;
	}
}

#RadioButtonColumn {
	display: none;
}

#SearchButton,
#TopControlsCtr .DialogDropDown {
	--search-button-width: calc(2ex + 5px * 2);
	--right-offset: 7px;

	position: absolute;
	top: 2px;
}

#SearchButton {
	right: var(--right-offset);
	min-width: var(--search-button-width);
}

#SwitchTabButton {
	@extend [role="tab"];

	width: unset;

	&#Selected {
		@extend [role="tab"][aria-selected="true"];
	}

	svg {
		display: none;
	}
}

#ServerTabPane {
	@extend [role="tabpanel"];
}

#ServerList {
	@extend .content-container;

	border: none;
	margin: 0;

	div[role="rowgroup"] {
		overflow: auto;
	}
}

#ServerListHeaderCtr {
	background-color: transparent;
	padding: 0;
}

#ServerListHeaderRow {
	gap: 0;
}

#SelectColumnsButton,
#ServerListHeaderCell {
	@extend button;
	@extend .table-button;

	min-width: unset;
	height: 17px;
}

#PasswordColumn,
#SecureColumn {
	padding: 0 2px;
}

#ServerListHeaderSort {
	color: inherit;
	font: var(--text-ui);
	text-transform: unset;

	justify-content: space-between;

	svg {
		width: var(--text-full);
		height: var(--text-full);
	}
}

#SelectColumnsButton {
	text-overflow: unset;

	width: 21px;
}

#ServerRow {
	gap: 0;

	&:hover {
		background-color: transparent;
	}

	&#SelectedRow {
		background: var(--color-highlight);
		color: var(--color-highlight-text);
	}
}

#ToggleShowFilterDetailsButton {
	width: 111px;

	&#Selected {
		@extend button:active;
	}

	svg {
		display: none;
	}
}

#TopControlsCtr {
	@extend [role="tablist"];

	gap: 0;

	.DialogDropDown {
		right: calc(var(--search-button-width) + var(--right-offset) * 2);
		width: 33vw;
	}
}

