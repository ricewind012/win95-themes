#URLBar {
	background-color: transparent;
	padding: 4px;
	margin-bottom: var(--window-gap);
	box-shadow: var(--border-button-raised);
}

#URLBarText {
	@extend input[type="text"];

	margin-left: var(--spacing-toolbar);

	&::before {
		display: none;
	}

	input {
		padding: 0;
	}
}

