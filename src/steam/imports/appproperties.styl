[class*="appproperties_"] {
	// note?
	/[class*="FieldDescription_"],
	/{attr(Detail)} {
		font: var(--text-ui);
		color: var(--color-button-text);
		margin: 4px 0;
	}

	/{attr(SectionTopLine)} {
		@extend fieldset;
	}

	/{attr(TopGap)} {
		margin-top: 4px;
	}

	// Workshop
	/{attr(WorkshopItemsRowsScrollable)} {
		@extend table;

		font: var(--text-ui);

		padding: 2px;
		margin: 0;
	}

	/{attr(WorkshopItemRowsScroll)} {
		border: none;
		box-shadow: none;
	}

	/{attr(WorkshopItemRow)} {
		filter: none;
		background-color: var(--color-window);
		box-shadow: none;

		&[class*="IsDragging_"] {
			background-color: var(--color-highlight);
			--color-window-text: var(--color-highlight-text);
		}
	}

	/{attr(LoadOrder)},
	/{attr(SortedColumn)} {
		font: var(--text-ui);
		color: var(--color-window-text);
	}

	/{attr(Details)} {
		& > :first-child {
			width: 88px;

			display: flex;
			justify-content: center;
		}
	}

	/{attr(TextDetails)} {
		background-color: transparent;
		color: var(--color-window-text);
	}

	/{attr(WorkshopItemDependencies)},
	/{attr(WorkshopItemTagsContainer)} {
		background-color: transparent;
		font: var(--text-ui);
		color: var(--color-gray-text);
	}

	/{attr(DragHandle)} {
		opacity: 1;
		color: var(--color-window-text);

		left: 80%;
	}

	/{attr(Controls)} {
		& > .DialogButton {
			@extend $small-button;

			--button-img: url('data:image/svg+xml;base64,');
			--button-img-size: 9px;
			--button-img-pos: 3px 2px;

			svg {
				display: none;
			}
		}
	}

	// etc.
	/{attr(BrowseDiskRow)} > .DialogButton {
		order: -1;
	}

	/{attr(BrowseDiskSize)} {
		margin-left: 1ch;
	}

	/{attr(SteamInputLink)} {
		color: var(--color-link);
	}
}
