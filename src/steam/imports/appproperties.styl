#BetaLabel {
	@extend $text-reset;
	@extend $legend-as-div;
}

#BuildInfo {
	@extend $text-reset;
}

// note?
[class*="FieldDescription_"],
#Detail {
	font: var(--text-ui);
	color: var(--color-button-text);
	margin: 4px 0;
}

#SectionTopLine {
	@extend fieldset;
}

#TopGap {
	margin-top: 4px;
}

// Workshop
#WorkshopItemsRowsScrollable {
	@extend .content-container;

	font: var(--text-ui);

	padding: 2px;
	margin: 0;
}

#WorkshopItemRowsScroll {
	border: none;
	box-shadow: none;
}

#WorkshopItemRow {
	filter: none;
	background-color: var(--color-window);
	box-shadow: none;

	&#IsDragging_ {
		background-color: var(--color-highlight);
		--color-window-text: var(--color-highlight-text);
	}
}

#LoadOrder,
#SortedColumn {
	font: var(--text-ui);
	color: var(--color-window-text);
}

#Details {
	& > :first-child {
		width: 88px;

		display: flex;
		justify-content: center;
	}
}

#TextDetails {
	background-color: transparent;
	color: var(--color-window-text);
}

#WorkshopItemDependencies,
#WorkshopItemTagsContainer {
	background-color: transparent;
	font: var(--text-ui);
	color: var(--color-gray-text);
}

#DragHandle {
	opacity: 1;
	color: var(--color-window-text);

	left: 80%;
}

#Controls {
	& > .DialogButton {
		@extend .titlebar-button;

		--button-img: url('data:image/svg+xml;base64,');
		--button-img-size: 9px;
		--button-img-pos: 3px 2px;

		svg {
			display: none;
		}
	}
}

// etc.
#BrowseDiskRow > .DialogButton {
	order: -1;
}

#BrowseDiskSize {
	margin-left: 1ch;
}

#SteamInputLink {
	@extend $link;
}

#ViewMore {
	@extend $link;

	padding: 0;

	flex: 0 0 auto;

	&,
	&:focus {
		box-shadow: none;
	}
}
