#Back,
#LeaveButton {
	@extend button;

	text-transform: unset;

	position: fixed;
	bottom: var(--pos);

	svg {
		display: none;
	}
}

#Avatar {
	filter: unset;
	transform: unset;
	box-shadow: none;
	margin: 0;
}

#AvatarAndUser {
	@extend fieldset;

	.DialogLabel {
		@extend $legend-as-div;
	}
}

#Back {
	right: var(--pos);
}

#ChannelsButtons {
	margin: 0;

	position: fixed;
	right: var(--pos);
	bottom: var(--pos);

	svg {
		display: none;
	}
}

#FixedRoleName,
#Notification {
	display: none;
}

#LeaveButton {
	left: var(--pos);
}

#PermissionsGroup {
	@extend fieldset;
}

#RoleNameHeader {
	margin-bottom: 8px;

	min-height: unset;

	svg {
		display: none;
	}
}

