#Container {
	padding: 8px;
}

#FilterArea {
	gap: 6px 8px;
}

#FilterBucket {
	@extend fieldset;

	.DialogInput_Wrapper {
		margin: 0;
	}
}

#FilterBucketLabel {
	@extend $legend-as-div;

	font();
	color: var(--color-button-text);
	text-transform: unset;
}

#FilterBucketBoxes {
	padding: 0;
	gap: 4px;

	display: flex;
	flex-direction: column;
}

#ExtraTall {
	grid-row-end: span 2;
}

#Default {
	font-style: normal;
}

#Buttons {
	margin: 0;
	gap: 4px;

	svg {
		display: none;
	}
}
