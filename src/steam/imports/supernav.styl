#MenuButton {
	@extend $text-reset;

	&::after {
		display: none;
	}
}

#SuperNav {
	padding-bottom: 2px;
}

#SuperNavMenu {
	@extend button;

	text-transform: unset;

	&#Selected {
		@extend .icon-button:active;
	}

	&:nth-of-type(1),
	&:nth-of-type(9) {
		margin-left: var(--dialog-button-spacing);
	}
}
