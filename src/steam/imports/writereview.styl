#ButtonText {
	margin: 0;
}

#DescribeGame,
#OptionsContainer {
	margin-top: 16px;
	margin-bottom: var(--text-spacing);

	position: relative;

	&::before {
		content: '';

		position: absolute;
		top: -10px;
		width: 100%;

		@extend hr;
	}
}

#Header {
	color: inherit;
	font-size: var(--text-header-size);
}

#LeftContainer {
	@extend $text-reset;
}

#OptionButton {
	background: none;

	width: unset;
}

#OptionDesc {
	text-align: left;
	padding: 0;
	margin-top: var(--text-spacing);
}

#OptionsContainer {
	background-color: transparent;
	padding: 0;

	& > div {
		border: none;
		padding: 0;
	}
}

#OptionSvg {
	display: none;
}

#Playtime,
#RecommendGame {
	color: inherit;
}

#RatingContainer {
	background-color: transparent;
	padding: 0;
	margin: var(--text-spacing) 0;
}

#ReviewThumbButton {
	background-image: none;

	&#Selected {
		@extend .icon-button:active;
	}

	span {
		padding-left: 10px;
	}
}

#ReviewSettingsChecks {
	margin: 0;
}

#ReviewSettingsContainer {
	margin-top: var(--text-spacing);
}

#ReviewSettingsRow {
	align-items: center;

	& > span {
		margin-right: var(--text-spacing);
	}
}

#ThumbIcon {
	fill: inherit;

	left: var(--icon-size);
	width: var(--icon-size);
	height: var(--icon-size);

	&#Down {
		top: 3px;
	}
}

#WriteReviewContainer {
	font-size: var(--text-ui-size);
}

