.ModalPosition_Content > [class*="pagedsettings_PagedSettingsDialog_"] {
	margin: 8px;

	min-width: unset;
	min-height: unset;
	height: unset;
	flex-direction: column;
}

#PageList {
	overflow: auto hidden;
	font();

	padding: 0;
	padding-left: 5px;

	height: unset;
	flex-grow: 0;
	flex-direction: row;
}

#PageListColumn {
	background-color: transparent;

	padding: 0;

	max-width: unset;
	min-height: unset;
	flex-grow: 0;
}

#PageListItem {
	@extend [role="tab"];

	font();

	margin-top: 2px;

	cursor: default;

	&[class*="Active"] {
		@extend [role="tab"][aria-selected="true"];
	}
}
