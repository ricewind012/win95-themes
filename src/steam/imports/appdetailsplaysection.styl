#DetailsProgressContainer {
	@extend progress;

	border-radius: 0;
}

#DetailsProgressBar {
	@extend progress::-webkit-progress-value;

	border-radius: 0;
}

#PlayBarDetailLabel,
#LastPlayedInfo {
	color: var(--color-button-text);
}

#PlayBar {
	opacity: 1;
	background-image: none;

	margin: 0;
}

#StickyHeader:not(#PlayBar) {
	display: none;
}
