#Arrow {
	display: none;
}

#contextMenu {
	@extend .window;
	@extend .window.child;

	background-image: none;

	box-sizing: border-box;
}

#contextMenuContents {
	background: var(--color-button-face);

	padding: 0;
}

#contextMenuItem {
	@extend .menu-entry;

	font-size: var(--text-ui-size);
	color: var(--color-button-text);
	border: none;

	&:has(.SVGIcon_Check) {
		@extend .menu-entry[checked][type="checkbox"];
	}

	&.disabled {
		@extend .menu-entry[disabled];
	}

	&:hover,
	&#active {
		@extend .menu-entry:hover;
	}

	.SVGIcon_Button {
		fill: var(--color-button-text);
		margin: 0;

		position: absolute;
		left: 4px;
		box(var(--text-ui-size));
	}
}

#ContextMenuSeparator {
	@extend hr;
}

// checkbox ?
#IconContainer {
	display: none;
}

#SubMenu {
	@extend .menu-entry[type="parent"];
}
