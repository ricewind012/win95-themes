#SteamRuntimeSystemInfoContainer {
	@extend .content-container;

	margin-top: var(--text-spacing);
}

#SteamRuntimeSystemInfoDialogContent {
	.DialogBody {
		box-shadow: none;
		padding: 0;

		&Text {
			margin-bottom: calc(var(--dialog-button-spacing) + 6px);
		}
	}
}

#Text {
	@extend $text-reset;

	font-family: var(--text-font-monospace);
}

#TextContainer {
	background-color: transparent;
	box-shadow: none;
}

