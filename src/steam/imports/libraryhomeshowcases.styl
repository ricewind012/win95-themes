#AddShowcase {
	@extend button;

	text-transform: unset;
	justify-content: center;

	svg {
		display: none;
	}
}

#Collapser {
	@extend button;

	padding: 4px;

	box(20px);

	svg {
		margin: 0;
	}

	polyline {
		stroke: var(--color-button-text);
	}
}

#Showcase {
	@extend fieldset;

	margin-bottom: 16px;
}

#ShowcaseHeader {
	@extend $legend-as-div;

	background-color: var(--color-window);
	color: inherit;
	border: none;

	top: -12px;
	align-items: center;
}

#CountDisplay {
	color: inherit;
}

#PageButtons {
	margin: 0;
}

#ChildrenContainer {
	// PageableContainer
	& > div {
		border: none;
		box-shadow: none;

		padding: 0;
		margin: 0;
	}
}

// Context menu
#CollectionDropDownContainer {
	// !important
	.DesktopUI && ._DialogInputContainer {
		@extend .menu;
	}
}

#DropDownItems {
	font: var(--text-ui);

	margin: 0;

	&[class*="OptionsRule"] {
		border: none;

		&::before {
			content: '';
			display: block;

			@extend hr;

			background-color: var(--color-button-face);

			margin-left: -20px;

			width: calc(100% + 40px);
		}
	}
}
