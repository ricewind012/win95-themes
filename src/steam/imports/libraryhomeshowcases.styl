#AddShowcase {
	@extend button;

	opacity: 1;
	text-transform: unset;
	margin-bottom: 16px;

	justify-content: center;

	svg {
		display: none;
	}
}

#Collapser {
	@extend button;
	@extend .titlebar-button;

	svg {
		margin: 0;
	}

	polyline {
		stroke: var(--color-button-text);
	}
}

#Message {
	@extend $text-reset;
}

#Showcase {
	@extend fieldset;

	margin-bottom: 16px;
}

#ShowcaseHeader {
	@extend $legend-as-div;

	background-color: var(--color-window);
	color: inherit;
	border: none;

	top: -12px;
	align-items: center;
}

#CountDisplay {
	@extend $text-reset;

	margin-left: var(--text-spacing);
}

#PageButtons {
	margin: 0;
}

#ChildrenContainer {
	// PageableContainer
	& > div {
		border: none;
		box-shadow: none;
		padding: 0;
		margin: 0;
	}
}

// Context menu
#CollectionDropDownContainer {
	// !important
	.DesktopUI && ._DialogInputContainer {
		@extend .window;
		@extend .window.child;
	}
}

#DropDownItems {
	font: var(--text-ui);
	margin: 0;

	&#OptionsRule {
		border: none;

		&::before {
			content: '';

			position: unset;
			width: calc(100% + 40px);
			display: block;

			@extend hr;

			background-color: var(--color-button-face);
			margin-left: -20px;
		}
	}
}
