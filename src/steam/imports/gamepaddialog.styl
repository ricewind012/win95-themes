[class*="gamepaddialog_"] {
	/{attr(Field)} {
		--field-row-children-spacing: 7px;

		background-color: transparent;

		padding: 0;

		div:not([class]) > & {
			@extend fieldset;

			gap: 4px;

			display: flex;
			flex-direction: column;
		}

		&::after { // lol
			display: none;
		}
	}

	/{attr(FieldChildren)} {
		gap: 4px;
	}

	/{attr(FieldLabel)} {
		font: var(--text-ui);
		color: var(--color-button-text);

		& > :not([class]) { // has something else
			gap: 1ch;

			display: flex;
			align-items: center;
		}
	}

	/{attr(FieldLabelRow)} {
		flex-direction: row-reverse;
	}

	/{attr(FieldDescription)} {
		[class*="WithDescription_"] > [class*="Row"] + & {
			color: var(--color-gray-text);

			margin-left: 17px;
		}
	}

	/{attr(ControlsListOuterPanel)} {
		--controls-list-spacing: 6px;

		gap: 0;

		flex: unset;
	}

	/{attr(ControlsListChild)} {
		max-width: unset;
	}

	/{attr(Toggle)} {
		@extend input;
		@extend input[type="checkbox"];

		&[class*="On_"] {
			@extend input[type="checkbox"]:checked;
		}
	}

	/{attr(ToggleRail)},
	/{attr(ToggleSwitch)} {
		display: none;
	}
}
