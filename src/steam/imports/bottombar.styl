#AddGameButton {
	@extend select;
	@extend $statusbar-alt;
}

#BottomBar {
	background: transparent;
	box-shadow: none;
	padding: 8px;

	position: fixed;
	top: 41px;
	right: -5px;
	flex: unset;
}

#BottomBarContainer {
	--statusbar-height: calc(var(--text-full) + 2px);

	padding-bottom: calc(var(--statusbar-height) + var(--window-gap));
}

#DownloadStatusContent,
#FriendsButton {
	@extend button;

	// Empty div without a class
	& > :empty {
		display: none;
	}
}

#DetailedDownloadProgress {
	width: unset;
	justify-content: center;

	&::before {
		content: var(--BottomBar_Manage);
	}

	#Icon {
		box-shadow: none;

		width: var(--icon-size);
		height: var(--icon-size);
		position: fixed;
		left: 8px;
		bottom: 5px;
		display: block;
	}
}

#Percentage {
	parentheses();
}

#ProgressBar {
	// I am not styling your 10th progress bar
	display: none;
}

#ProgressBarWrapper {
	position: fixed;
	left: 28px;
	bottom: 7px;
	flex-grow: 0;
}

#FriendsButton {
	#Text::after {
		content: '...';
	}
}

#Icon,
#IconBevel {
	display: none;
}

#StatusLine {
	color: inherit;
	gap: var(--text-spacing);
}

#Status,
#Text,
#Queue {
	@extend $text-reset;
}
