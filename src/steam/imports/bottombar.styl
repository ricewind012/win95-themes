#AddGameButton {
	@extend select;
}

#BottomBar {
	background: transparent;
	box-shadow: none;

	padding: 8px;

	position: fixed;
	top: 41px;
	right: -7px;

	flex: unset;
}

#DownloadStatusContent,
#FriendsButton {
	@extend button;

	width: unset;
	display: flex;

	// Empty div without a class
	& > :empty {
		display: none;
	}
}

#FriendsButton {
	#Text::after {
		content: '...';
	}
}

#Icon {
	display: none;
}

#Text,
#Queue {
	@extend $text-reset;
}
