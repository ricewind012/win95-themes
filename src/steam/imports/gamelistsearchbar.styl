#Container {
	background-color: transparent;

	gap: var(--toolbar-spacing);
	margin: 0;
}

#FilterTag {
	padding: 2px;
	margin: 0;
}

#SearchInput {
	min-height: unset;

	.DialogTextInputBase {
		background-image: none;
		margin: 0;
	}
}

#SearchFilterInput {
	color: var(--color-button-text);
	align-items: center;
}

#SearchFilterInputClear {
	position: unset;
}

#SearchByTypePrompt {
	font: var(--text-ui);
	padding: 0 18px;
}

#AdvancedSearchContainer {
	@extend button;

	margin-right: 0;

	height: unset;
	justify-content: center;

	& > .Focusable > div {
		cursor: default;

		&::before {
			content: 'Search...';
		}
	}

	svg {
		display: none;
	}
}

#AdvancedSearchPane {
	@extend .window;
	@extend .window.child;

	&::before {
		display: none;
	}
}
