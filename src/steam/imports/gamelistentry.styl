#Container {
	@extend .tree-item
	@extend .tree-item[open];
	@extend $text-reset;

	overflow: visible;
	background-color: transparent;
	box-shadow: none;

	padding: 3px 0;

	&::before {
		left: 12px;
		top: -11px;
		width: 18px;
		height: 24px;
	}

	&::after {
		left: -7px;
		top: -10px;
		height: calc(100% - 1px);
	}

	&#Selected {
		@extend .list-item[selected] > .list-item-name-container > .list-item-name;

		--color-gray-text: var(--color-highlight-text);
	}

	* {
		background-color: transparent;
	}
}

#DownloadDash,
#DownloadProgress {
	color: var(--color-gray-text);
}

#DownloadProgressSVG {
	display: none;
}

#FriendIsPlaying {
	left: unset;
	right: 0;
}

#AppIconDownloading,
#GameIcon {
	filter: none;
	margin-right: 7px;

	width: var(--icon-size);
	height: var(--icon-size);
}

#GameListEntryContainer {
	background-color: transparent;

	align-items: center;

	&::before {
		left: 7px;
		top: -14px;
		width: 8px;
		height: 24px;
	}
}
