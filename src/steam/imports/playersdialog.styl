#AvatarAndName {
	color: inherit;

	gap: 4px;
}

#ColumnResizer {
	--separator-size: 13px;

	opacity: 0;

	padding: 0;

	width: var(--separator-size);
	margin-right: calc(var(--separator-size) / -2);
}

// !important in ../other/dialog-shared.styl
.ModalDialogPopup > .ModalDialogBody #DescriptionText {
	margin-bottom: 4px;

	position: initial;
}

#Empty {
	@extend $text-reset;
}

#PlayersDialog {
	.DialogBody {
		padding: 0;
	}
}

#PlayersList {
	@extend table;

	padding: 2px;
	margin: 0;
}

#PlayersListBody {
	overflow: auto;
	background-color: transparent;

	padding: 0;

	[role="cell"] {
		@extend $text-reset;
	}
}

#PlayersListHeaderCtr {
	background-color: transparent;

	padding: 0;
}

#PlayersListHeaderCell {
	@extend button;
	@extend .table-button;

	// "Add Friend" column
	&:last-of-type {
		height: 17px;
	}
}

#PlayersListHeaderColumn {
	color: inherit;

	padding: 0;

	display: flex;
	justify-content: space-between;
}

