#PageableContainer {
	@extend fieldset;

	svg {
		color: inherit;
	}

	polyline {
		stroke: var(--color-window-text);
	}
}

#PageClickContainer {
	background-color: var(--color-window);
	padding-right: 2px;

	position: absolute;
	top: -8px;
	right: 8px;
}

#HeaderPageControls {
	@extend $text-reset;

	// TODO @extend
	& > div:not([class]) {
		background-color: var(--color-window);
		padding: 0 2px;

		position: absolute;
		top: -8px;
		right: 42px;
	}
}

#Name {
	@extend $text-reset;
	@extend $legend-as-div;

	background-color: var(--color-window);
}

#PageLeft,
#PageRight {
	@extend $pageable-container-button;

	&#Disabled {
		@extend .titlebar-button:disabled;
	}
}

#PageLeft {
	--button-img: var(--icon-arrow-left);
}

#PageRight {
	--button-img: var(--icon-arrow-right);
}
