#Bar {
	padding: 0;

	circle {
		stroke: var(--color-button-text);
	}

	svg {
		fill: var(--color-button-text);
	}
}

#MenuHeader {
	@extend select;

	margin: 0;

	cursor: default;
}

#ScrollToTop,
#Arrow {
	display: none;
}

#ViewFiltersBar {
	margin: 0;
	margin-left: var(--spacing-toolbar);
}

#CheckboxWithImage {
	--button-img-pos: 3px 2px;

	@extend button;
	@extend .icon-button;

	&#Active {
		@extend .icon-button:active;
	}

	for img, i in icons {
		&:nth-child({i + 1}) {
			--button-img: img;
		}
	}

	svg {
		display: none;
	}
}
