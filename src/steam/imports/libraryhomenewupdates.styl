#SettingsButton {
	@extend $small-button;

	--button-img: url('data:image/svg+xml;base64,');
	--button-img-size: 11px;
	--button-img-pos: 2px;

	&::before {
		height: 13px;
	}

	svg {
		display: none;
	}
}

#EventRowCarousel {
	margin: 0;
}

#EventTime {
	font: var(--text-ui);
	color: inherit;

	padding-top: 4px;
}

#MainImageContainer {
	border-radius: 0;
}

#EventOptions {
	opacity: 1;

	padding-top: 4px;
	padding-right: 4px;

	right: 0;

	& > div {
		@extend $small-button;

		--button-img: var(--icon-arrow-bottom);
		--button-img-size: 7px 4px;
		--button-img-pos: 4px center;

		background-image: none;
	}
}

#PartnerEventRowCapsule_MainImageContainer {
	border-radius: 0;
}

#PartnerEventRowCapsule_TextCtn {
	@extend $text-reset;

	padding: 0;
	padding-top: 4px;
}

#PartnerEventRowCapsule_TextTitle {
	@extend $text-reset;

	min-height: 40px;
}

#GameIconAndName {
	@extend button;

	width: unset;
	align-items: center;
	justify-content: center;
}

#GameIcon {
	filter: none;

	margin-right: 4px;

	box(16px);
}

#GameName {
	color: inherit;
}
