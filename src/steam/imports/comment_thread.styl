$reset-icon-color {
	color: inherit;
	fill: inherit;
	stroke: inherit;
}

#LikeButton,
#CommentButton,
#Reactions {
	@extend button;
}

#LikeCount,
#CommentCount,
#ReactionCount {
	@extend $text-reset;
}

#LikeIcon,
#CommentIcon,
#RatingIcon,
#ReactionIcon {
	@extend $reset-icon-color;

	width: 16px;
	height: 16px;

	path {
		@extend $reset-icon-color;
	}
}

#ButtonSpacer {
	display: none;
}

#RatingBar {
	opacity: 1;
	font: var(--text-ui);
}
