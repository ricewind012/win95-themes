#FriendsDescription,
#Subheader {
	@extend $text-reset;
}

#NotificationGroup {
	background-color: transparent;
	border-bottom: none;
	margin: 0;
}

#NotificationSection {
	align-items: center;
}

#NotificationFeedToggle {
	margin-right: 0;
}

#NotificationDescription {
	font: var(--text-ui);
	color: inherit;
	margin: 0;
}

#NotificationListSection {
	gap: 4px;

	display: flex;
	flex-direction: column;
}

#NotificationPrefDetails {
	background-color: transparent;
	gap: 4px;
	padding: 0;
	padding-left: calc(13px + var(--spacing-label));
	box-shadow: none;

	flex-direction: column;

	.DialogCheckbox_Container {
		margin: 0;
	}
}

#PrefDetailsToggle {
	@extend button;
	@extend .titlebar-button;
	@extend $icon-more;

	width: unset;

	&#Selected {
		@extend button:active;
	}

	&::before {
		display: initial;
	}

	svg {
		display: none;
	}
}

#Toggles.Panel {
	gap: 106px;
}
