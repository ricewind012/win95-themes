#ActionLabel {
	text-transform: unset;
	margin-bottom: var(--text-spacing);

	width: 148px;

	svg {
		display: none;
	}
}

#SaveSearchDescription {
	font: var(--text-ui);
	margin-top: var(--messagebox-content-spacing);
}

#TwoOptionsContainer {
	gap: 16px;
}

#Description {
	@extend $text-reset;

	background-image: none;
	padding: 0;
}

#Disabled {
	& > .DialogButton {
		@extend button:disabled;
	}
}

#Option {
	margin: 0;
}

#Required {
	margin-left: var(--text-spacing);
}

#SaveCollectionContainer {
	.DialogBody {
		gap: 12px;
	}

	.DialogFooter {
		padding: 0;
	}

	.DialogLabel {
		margin-bottom: var(--text-spacing);
	}

	.DialogTextInputBase {
		text-transform: unset;
	}
}

#TwoOptionsContainer {
	background-color: transparent;
}
