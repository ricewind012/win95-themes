#Wrapper {
	background-color: transparent;
	border: none;
}

#FocusBar,
#URLBarReplacement {
	display: none;
}

#TopBar {
	background: transparent;
	box-shadow: none;
}

#TitleBar {
	flex-direction: column-reverse;
	height: unset;

	-webkit-app-region: no-drag;

	&::before {
		content: '';

		@extend hr;

		margin-top: 2px;

		width: 100%;
	}
}

#WindowControls,
#RootMenuBar {
	flex: initial;
	cursor: default;
}

#WindowControls {
	&::after {
		content: 'Steam';

		@extend $dialog-title;
	}
}

#RootMenuBar {
	gap: 0;
	padding: 0;
}

#SuperNavBar {
	padding: 0;

	height: unset;
	min-height: unset;
	flex-direction: column;

	-webkit-app-region: no-drag;

	&::after {
		content: '';
		display: block;

		@extend hr;

		margin-bottom: 0;
	}
}

// The browser view is above everything else
#Browser {
	margin-left: 2px;
	margin-top: 2px;

	position: relative;
	width: calc(100% - 4px);

	&::before {
		content: '';

		position: absolute;
		inset: -2px -2px -3px -2px;

		@extend .content-container;
	}
}

#BrowserWrapper {
	height: calc(100% - 3px);
}

#LockIcon {
	@extend $text-reset;

	padding-bottom: 1px;
}

#OuterFrame {
	gap: var(--window-gap);
}

#ReloadButton {
	@extend button;

	min-width: 21px;
	height: 21px;

	svg {
		padding: 0;
	}
}

#URL {
	@extend $text-reset;
}

#URLBar {
	background-color: transparent;
	box-shadow: none;
	padding: 0;
	margin-bottom: 3px;
}

#URLBarText {
	@extend select;

	width: 100%;
}
