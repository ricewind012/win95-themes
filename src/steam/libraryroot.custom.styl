attr(child) {
	original = replace('"]', s('%s_"]', child), selector());

	s('%s', unquote(original), child);
}

// An alternative to "@extend .content-container" for special elements
$content-container-alt {
	background-color: var(--color-window);

	margin: var(--border-size);

	&::before {
		content: '';

		box-shadow: var(--border-field);

		position: fixed;
		inset: var(--inset);

		pointer-events: none;
	}
}

* {
	border-radius: 0;

	box-sizing: border-box;

	transition: none;
}

body {
	@extend .window;
}

button {
	text-align: center;
}
