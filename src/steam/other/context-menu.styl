// Context menu window
.ContextMenuPopupBody {
	box-shadow: none;
	padding: 0;
}

// "Do Not Disturb"
.contextMenuSectionContent {
	&::after {
		content: '';

		@extend hr;
	}
}

.personaContextMenuItem {
	.DialogCheckbox {
		display: none;

		&_Container {
			margin: 0;
		}
	}
}

.persona_menu_descriptor,
.persona_menu_dnd_descriptor {
	font: var(--text-ui);
	color: var(--color-gray-text);
	padding: 0;
	margin-top: 2px;
}

