[class*="dropdown_DialogDropDownMenu_"] {
	/{attr(Item)} {
		@extend .menu-entry;
	}
}

[class*="dropdownlabel_"] {
	/{attr(DropDownLabelTitle)} {
		font: var(--text-ui);
		color: inherit;
	}

	/.DialogDropDown {attr(DropDownLabelDescription)} {
		display: none;
	}
}

[class*="radio_"] {
	/{attr(Group)},
	/{attr(Button)} {
		background-color: transparent;
		padding: 0;
	}

	/{attr(Group)} {
		box-shadow: none;
		gap: 4px;
		flex-direction: column;
	}

	/{attr(Button)} {
		font: var(--text-ui);
		color: var(--color-button-text);
		text-align: left;

		gap: 7px;

		flex-direction: row;
		justify-content: left;

		&::before {
			content: '';

			@extend input[type="radio"];
		}

		&:active::before {
			--control-img: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAwAAAAMBAMAAACkW0HUAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAAAJcEhZcwAADsIAAA7CARUoSoAAAAAPUExURf///wAAAIeIj8DHyP///1QVyYYAAAABdFJOUwBA5thmAAAAOElEQVQI12NgYFBSYgACJUFBIM0kaGws6MDAJGxsbODAoGgMBCzYKagSJgZjYwYHBgYXMAISQBIAZBYIx/Jku34AAAAASUVORK5CYII=');
		}

		&[class*="Active"]::before {
			--control-img: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAwAAAAMAgMAAAArG7R0AAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAAAJcEhZcwAADsMAAA7DAcdvqGQAAAAMUExURf///wAAAIeIj////88rXQEAAAABdFJOUwBA5thmAAAAMElEQVQI12NgWMXAwBW6gEH1fwyD+v8zDPOvf2aYHwrFQDZITOE/DwM/wwcGhv8MAL1zEtdwC089AAAAAElFTkSuQmCC');
		}

		& > span {
			parentheses();
		}
	}
}

[class*="gamepadslider_"] {
	/{attr(SliderControl)} {
		@extend input[type="range"];

		margin: 0;

		height: unset;
	}

	/{attr(SliderTrack)} {
		@extend input[type="range"]::-webkit-slider-runnable-track;

		border-radius: 0;

		margin: 0;

		height: 4px;

		&::before {
			display: none;
		}
	}

	/{attr(SliderHandle)} {
		@extend input[type="range"]::-webkit-slider-thumb;

		box-shadow: none;

		margin: 0;
		margin-top: -8px;
	}

	/{attr(SliderHandleContainer)} {
		transform: translateX(calc(-100% * var(--inverse-normalized-value) + 7px * var(--inverse-normalized-value)));
	}
}

