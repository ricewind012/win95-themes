.Modal {
	&Position {
		background-image: none $i;

		&_TopBar {
			display: none $i;
		}

		&_Content {
			color: var(--color-button-text);
			box-shadow: none;
		}
	}
}

.Dialog {
	&Button {
		&::before {
			display: none $i;
		}
	}

	&DropDown {
		@extend select;

		&_Arrow {
			display: none $i;
		}
	}

	&MenuPosition ._DialogInputContainer {
		@extend body;

		border-radius: 0;
	}

	&Checkbox {
		@extend input[type="checkbox"];

		border-radius: 0 $i;

		&.Active {
			@extend input[type="checkbox"]:checked;
		}

		& > svg {
			display: none $i;
		}

		&_Container {
			background-color: transparent $i;
			box-shadow: none $i;

			padding: 0 $i;

			align-items: center;
		}
	}

	&Toggle_Label {
		font: var(--text-ui) $i;
		color: var(--color-button-text) $i;

		margin-left: 6px;
	}

	&Content {
		background: transparent $i;

		&Transition {
			background: transparent $i;

			margin-top: -1px;

			width: unset $i;
			max-width: unset $i;
		}

		&Transition > & {
			padding: 0 $i;

			bottom: 6px $i;
		}
	}

	&Body {
		@extend [role="tabpanel"];

		overflow: auto $i;
		-webkit-mask-image: none $i; // client settings
		font: var(--text-ui) $i;

		padding: 14px $i;
		margin: 1px $i;
		margin-top: 0 $i;
		gap: 8px;

		a {
			color: var(--color-link) $i;
		}
	}

	&ControlsSection {
		@extend fieldset;

		gap: 4px;

		display: flex;
		flex-direction: column;
	}
}

[class*="gamepaddialog_"] {
	/{attr(Field)} {
		--field-row-children-spacing: 7px $i;

		background-color: transparent $i;

		padding: 0 $i;

		div:not([class]) > & {
			@extend .DialogControlsSection;
		}

		&::after { // lol
			display: none $i;
		}
	}

	/{attr(FieldChildren)} {
		gap: 4px;
	}

	/{attr(FieldLabel)} {
		font: var(--text-ui) $i;
		color: var(--color-button-text);

		& > :not([class]) { // has something else
			gap: 1ch;

			display: flex;
			align-items: center;
		}
	}

	/{attr(FieldLabelRow)} {
		flex-direction: row-reverse;
	}

	/{attr(FieldDescription)} {
		[class*="WithDescription_"] > [class*="Row"] + & {
			color: var(--color-gray-text) $i;

			margin-left: 17px $i;
		}
	}

	/{attr(ControlsListOuterPanel)} {
		--controls-list-spacing: 6px $i;

		gap: 0 $i;

		flex: unset $i;
	}

	/{attr(ControlsListChild)} {
		max-width: unset $i;
	}

	/{attr(Toggle)} {
		@extend input;
		@extend input[type="checkbox"];

		&[class*="On_"] {
			@extend input[type="checkbox"]:checked;
		}
	}

	/{attr(ToggleRail)},
	/{attr(ToggleSwitch)} {
		display: none;
	}
}

/.DialogControlsSectionHeader,
/.DialogSubHeader,
/.DialogBodyText,
/[class*="appproperties_Title_"],
/[class*="librarysettings_DescriptionText_"],
/[class*="remoteplaysettings_TableHeader_"] > :first-child {
	@extend $legend-as-div;

	color: var(--color-button-text) $i;
	text-transform: unset $i;
	letter-spacing: unset $i;

	margin: 0 $i;
}