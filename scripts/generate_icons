#!/bin/sh

printf '// DO NOT EDIT! Generated with "npm run generate-icons".\n\n'
printf ':root {\n'
for dir in assets/icons/*; do
	for file in "$dir/"*; do
		type=${dir##*/}
		icon=${file##*/}
		icon=${icon%.*}

		printf '\t--icon-%s-%s: file("%s", "%s");\n' \
			"$type" "$icon" "$icon" "$type"
	done
done
printf '}\n'
